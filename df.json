        "properties": {
          "name": {
            "type": "string",
            "description": "User name",
            "format": "text"
          },
          "email": {
            "type": "string",
            "description": "User email",
            "format": "email"
          },
          "password": {
            "type": "string",
            "description": "User password",
            "example": "Qw123456"
          }
